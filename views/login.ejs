<!DOCTYPE>
<html>
	<head>
		<meta http-equiv="content-type" content="text/html;charset=utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
		<meta name="format-detection" content="telephone=no"/>
		<title>悠派智能日报系统-登录</title>
		<link href="css/common.css" rel="stylesheet" type="text/css" />
		<link href="css/login.css" rel="stylesheet" type="text/css" />
		<script src="js/jquery-2.1.1.min.js"></script>
		<script src="js/common.js"></script>
	</head>
	<body >
		<div class="login">
			<div class="message">悠派智能日报系统 - 登录</div>
			<form method="post" action="/dologin">
				<p><span>账号：</span><input id="user" placeholder="输入账号" required="required" type="text"></p>
				<p><span>密码：</span><input id="password" placeholder="输入密码" required="required" type="password"></p>
				<div class="tips_button"><a href="/regist">注册账号</a></div>
				<p><input value="登录" type="button" id="login_button"></p>
			</form>
		</div>
		<script>
			$("#login_button").on("click", function(){
				var user = $("#user").val();
				var password = $("#password").val();
				if(user.length<1){
					return alert("请输入账号！");
				}
				if(password.length<1){
					return alert("请输入密码！");
				}
				$.post("/dologin",{
					"user" : user,
					"password" : password
				},function(result){
					if(result == "1"){ // 登录成功
						window.location = "/";
					}else if(result == "-1"){
						alert("用户名不存在");
					}else if(result == "-2"){
						alert("密码错误！");
					}
				});
			});

			document.onkeydown=function(event){
				var e = event || window.event || arguments.callee.caller.arguments[0];
				if(e && e.keyCode==13){
					$("#login_button").click();
				}
			};
		</script>
	</body>
</html>
